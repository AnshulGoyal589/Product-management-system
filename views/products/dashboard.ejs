<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .dashboard-container {
            display: flex;
            justify-content: space-around;
            margin-top: 20px;
            width: 100%;
        }

        .dashboard-section {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 30%;
            margin-bottom: 20px;
        }

        .dashboard-section h2 {
            text-align: center;
            color: #333;
        }

        .product-section {
            max-width: 600px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .product-section h2 {
            text-align: center;
            color: #333;
        }

        .product-list {
            list-style: none;
            padding: 0;
        }

        .product-list li {
            margin-bottom: 20px;
        }

        .ecommerce-section {
            max-width: 800px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .ecommerce-section h2 {
            text-align: center;
            color: #333;
        }
    </style>
</head>
<body>

    <div class="dashboard-container">
        <div class="dashboard-section">
            <h2>Total Orders</h2>
            <!-- Content related to total orders -->
        </div>

        <div class="dashboard-section">
            <h2>Current Orders</h2>
            <!-- Content related to current orders -->
        </div>

        <div class="dashboard-section">
            <h2>Placed Orders</h2>
            <!-- Content related to placed orders -->
        </div>
    </div>

    <div class="product-section">
        <h2>All Products</h2>
        <ul class="product-list">
            <% products.forEach(product => { %>
                <li>
                    <strong>Title:</strong> <%= product.title %><br>
                    <strong>Description:</strong> <%= product.description %><br>
                    <strong>Price:</strong> <%= product.variants.edges[0].node.price %><br>
                    <strong>Inventory Quantity:</strong> <%= Math.floor(Math.random() * 51) %>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>

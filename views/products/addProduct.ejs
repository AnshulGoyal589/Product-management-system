<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product Form</title>
</head>
<body>

    <h2>Add Product</h2>
    <form id="productForm">
        <label for="title">Product Title:</label>
        <input type="text" id="title" name="title" required><br>

        <label for="description">Product Description:</label>
        <textarea id="description" name="description" required></textarea><br>

        <label for="price">Product Price:</label>
        <input type="text" id="price" name="price" required><br>

        <label for="inventoryQuantity">Inventory Quantity:</label>
        <input type="text" id="inventoryQuantity" name="inventoryQuantity" required><br>

        <button type="button" onclick="submitForm()">Submit</button>
    </form>

    <script>
        function submitForm() {
            const title = document.getElementById("title").value;
            const description = document.getElementById("description").value;
            const price = document.getElementById("price").value;
            const inventoryQuantity = document.getElementById("inventoryQuantity").value;

            const formData = {
                title,
                description,
                price,
                inventoryQuantity
            };

            // Send data to the server using fetch
            fetch('/addDataToShopify', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(formData),
            })
            .then(response => response.json())
            .then(data => {
                console.log('Success:', data);
                // Redirect to the products page
                // window.location.href = '/fetchDataFromShopify';
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }
    </script>

</body>
</html>
